{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "nixpacks"
  },
  "deploy": {
    "startCommand": "npm start",
    "restartPolicyType": "always"
  },
  "environments": {
    "production": {
      "variables": {
        "SUPABASE_URL": "${{SUPABASE_URL}}",
        "SUPABASE_KEY": "${{SUPABASE_KEY}}"
      }
    }
  }
}
